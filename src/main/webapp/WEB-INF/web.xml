<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>ru.sevumyan.arsen.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>employeesServlet</servlet-name>
        <servlet-class>ru.sevumyan.arsen.servlets.EmployeesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>positionsServlet</servlet-name>
        <servlet-class>ru.sevumyan.arsen.servlets.PositionsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>employeesServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>positionsServlet</servlet-name>
        <url-pattern>/positions</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>

    <context-param>
        <param-name>contextClass</param-name>
        <param-value>
            org.springframework.web.context.support.AnnotationConfigWebApplicationContext
        </param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>ru.sevumyan.arsen.AppConfig</param-value>
    </context-param>


</web-app>